            <!-- Contador de agua -->



            <FrameLayout
                android:id="@+id/contenedor_kcal_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FA1234">

                    <com.example.midiariop.ui.home.CircularProgressBar
                        android:id="@+id/circularProgressBar"
                        android:layout_width="185dp"
                        android:layout_height="185dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <!-- Texto KCAL RESTANTES (Superpuesto) -->
                    <LinearLayout
                        android:id="@+id/container_calorias_restantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/circularProgressBar"
                        app:layout_constraintEnd_toEndOf="@id/circularProgressBar"
                        app:layout_constraintStart_toStartOf="@id/circularProgressBar"
                        app:layout_constraintTop_toTopOf="@id/circularProgressBar"
                        app:layout_constraintVertical_bias="0.5">

                        <!-- TextView para el número dinámico -->
                        <TextView
                            android:id="@+id/kcal_number_restantes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="2245"
                            android:textColor="@android:color/white"
                            android:textSize="43sp"
                            android:layout_marginBottom="8dp" />

                        <!-- TextView para el texto estático -->
                        <TextView
                            android:id="@+id/kcal_text_restantes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="KCAL RESTANTES"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </LinearLayout>



                    <!-- Texto Kcal QUEMADAS -->
                    <LinearLayout
                        android:id="@+id/container_kcal_quemadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/circularProgressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.48"
                        android:layout_marginEnd="1dp">

                        <!-- TextView para el número dinámico -->
                        <TextView
                            android:id="@+id/kcal_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="35sp"/>

                        <!-- TextView para el texto estático -->
                        <TextView
                            android:id="@+id/kcal_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="QUEMADAS"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <!-- Texto Kcal CONSUMIDAS -->
                    <LinearLayout
                        android:id="@+id/container_kcal_consumidas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/circularProgressBar"
                        app:layout_constraintHorizontal_bias="0.7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.48"
                        android:layout_marginEnd="3dp">

                        <!-- TextView para el número dinámico -->
                        <TextView
                            android:id="@+id/kcal_number_consumidas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="35sp"/>

                        <!-- TextView para el texto estático -->
                        <TextView
                            android:id="@+id/kcal_text_consumidas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="CONSUMIDAS"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <!-- VER ESTADÍSTICAS -->
            <TextView
                android:id="@+id/btn_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="VER ESTADÍSTICAS"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:drawableBottom="@drawable/ic_arrow_down"
                android:drawablePadding="4dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/contenedor_kcal_circular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Sección de nutrientes -->
            <LinearLayout
                android:id="@+id/nutrient_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/nutrient_background"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/btn_statistics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/carbohydrates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Carbohidratos\n0/281g"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/proteins"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Proteínas\n0/112g"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Grasas\n0/75g"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Contenedor para los TextView -->
            <FrameLayout
                android:id="@+id/contenedorTextos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nutrient_section"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#8E8B8B"
                android:padding="5dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#227CDB">

                    <!-- Primer TextView -->
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="#FF1234"
                        android:textColor="#000000"
                        android:text="Texto 1" />

                    <!-- Segundo TextView -->
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/textView1"
                        android:background="#B7B7BD"
                        android:textColor="#000000"
                        android:text="Texto 2Texto 2Texto 2Texto 2Texto 2"
                        android:layout_marginStart="16dp"/>

                    <!-- Segundo TextView -->
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/textView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="#A4928D"
                        android:textColor="#000000"
                        android:text="Texto 3"
                        android:layout_marginStart="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnUpdateProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Actualizar Progreso"
        android:layout_marginTop="8dp" />

    <!-- Barra inferior (Bottom Menu) -->
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AA1234"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú Inferior"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Imagen de plantilla -->
    <ImageView
        android:id="@+id/templateImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/template_1"
        android:alpha="0.5"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>