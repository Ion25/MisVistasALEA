<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <Button
        android:id="@+id/startListeningButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Listening" />


    <com.example.alea.ui.voice.RecordButton
        android:id="@+id/micButtonView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:contentDescription="Press_to_record" />



    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Result will appear here"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- Muestra la respuesta de la API -->

        <TextView
            android:id="@+id/responseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Response will appear here"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="8dp" />
    </ScrollView>


    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!-- Contenedor Horizontal para las tres listas desplegables -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <!-- Lista para Carbohidratos -->
        <ExpandableListView
            android:id="@+id/expandableCarbs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Lista para ProteÃ­nas -->
        <ExpandableListView
            android:id="@+id/expandableProteins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Lista para Grasas -->
        <ExpandableListView
            android:id="@+id/expandableFats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>



</LinearLayout>