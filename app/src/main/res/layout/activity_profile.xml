<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E">

    <!-- Cabecera -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/header_background"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar_hombre_ligero"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:elevation="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />
    </LinearLayout>

    <!-- Contenedor de datos -->
    <LinearLayout
        android:id="@+id/profileDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/header"
        android:layout_marginTop="16dp">

        <!-- Género -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sexo"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Género: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Altura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_altura"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Altura: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Peso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_peso"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Peso: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Nivel de Actividad Física -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvActivityLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de Actividad Física:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spActivityLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:background="#3A3A3C"
                android:popupBackground="#2C2C2E" />
        </LinearLayout>

        <!-- Objetivo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_goal"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvGoalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objetivo:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spUserGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:background="#3A3A3C"
                android:popupBackground="#2C2C2E" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
