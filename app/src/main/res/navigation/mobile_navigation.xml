<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.alea.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_voiceFragment"
            app:destination="@id/voiceFragment" />
        <action
            android:id="@+id/action_navigation_home_to_caloriasFragment"
            app:destination="@id/caloriasFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.alea.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.alea.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- Navegar desde el botón voiceFragment -->
    <fragment
        android:id="@+id/voiceFragment"
        android:name="com.example.alea.ui.voice.VoiceFragment"
        android:label="Reconocimiento de Voz"
        tools:layout="@layout/fragment_voice" />

    <!-- Navegar desde el botón caloriasFragment -->
    <fragment
        android:id="@+id/caloriasFragment"
        android:name="com.example.alea.ui.dashboard.CalorieTrackerFragment"
        android:label="Reconocimiento de Voz"
        tools:layout="@layout/fragment_calorie_tracker" />


</navigation>